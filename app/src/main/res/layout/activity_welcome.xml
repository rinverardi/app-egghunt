<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/primaryDarkColor"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".welcome.WelcomeActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:alpha="0"
        android:elevation="@dimen/default_elevation"
        android:id="@+id/card"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/welcome_margin_l"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/default_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title0"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/welcome_margin_l"
                android:layout_marginStart="@dimen/welcome_margin_l"
                android:layout_marginTop="@dimen/welcome_margin_l"
                android:layout_width="match_parent"
                android:text="@string/title_welcome0"
                android:textSize="@dimen/welcome_text_l"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/title1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/welcome_margin_l"
                android:layout_width="match_parent"
                android:text="@string/title_welcome1"
                android:textSize="@dimen/welcome_text_l"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/egg0"
        android:layout_height="85dp"
        android:layout_marginBottom="@dimen/welcome_margin_l"
        android:layout_marginEnd="@dimen/welcome_margin_s"
        android:layout_marginStart="@dimen/welcome_margin_l"
        android:layout_width="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/egg1"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/egg0"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/egg1"
        android:layout_height="85dp"
        android:layout_marginBottom="@dimen/welcome_margin_l"
        android:layout_marginEnd="@dimen/welcome_margin_s"
        android:layout_marginStart="@dimen/welcome_margin_s"
        android:layout_width="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/egg2"
        app:layout_constraintStart_toEndOf="@+id/egg0"
        app:srcCompat="@mipmap/egg1"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/egg2"
        android:layout_height="85dp"
        android:layout_marginBottom="@dimen/welcome_margin_l"
        android:layout_marginEnd="@dimen/welcome_margin_s"
        android:layout_marginStart="@dimen/welcome_margin_s"
        android:layout_width="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/egg3"
        app:layout_constraintStart_toEndOf="@+id/egg1"
        app:srcCompat="@mipmap/egg2"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/egg3"
        android:layout_height="85dp"
        android:layout_marginBottom="@dimen/welcome_margin_l"
        android:layout_marginEnd="@dimen/welcome_margin_l"
        android:layout_marginStart="@dimen/welcome_margin_s"
        android:layout_width="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/egg2"
        app:srcCompat="@mipmap/egg3"
        tools:ignore="ContentDescription"/>

    <Button
        android:id="@+id/button"
        android:insetBottom="0dp"
        android:insetTop="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/welcome_margin_l"
        android:layout_marginEnd="@dimen/welcome_margin_l"
        android:layout_marginStart="@dimen/welcome_margin_l"
        android:padding="@dimen/welcome_padding"
        android:layout_width="0dp"
        android:text="@string/button_scan"
        android:textSize="@dimen/welcome_text_m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>