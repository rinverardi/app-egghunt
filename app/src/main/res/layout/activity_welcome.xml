<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/primaryDarkColor"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".WelcomeActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textView"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:text="@string/activity_welcome"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/egg0"
        android:layout_height="85dp"
        android:layout_width="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/egg1"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/egg0"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/egg1"
        android:layout_height="85dp"
        android:layout_width="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/egg2"
        app:layout_constraintStart_toEndOf="@+id/egg0"
        app:srcCompat="@mipmap/egg1"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/egg2"
        android:layout_height="85dp"
        android:layout_width="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/egg3"
        app:layout_constraintStart_toEndOf="@+id/egg1"
        app:srcCompat="@mipmap/egg2"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/egg3"
        android:layout_height="85dp"
        android:layout_width="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/egg2"
        app:srcCompat="@mipmap/egg3"
        tools:ignore="ContentDescription"/>

    <Button
        android:id="@+id/button"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:padding="16dp"
        android:text="@string/button_scan"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>