<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_margin_l"
    android:layout_marginVertical="@dimen/default_margin_s"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/default_radius"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:padding="@dimen/default_padding_l">

            <TextView
                android:id="@+id/description"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/count"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_s"
                android:layout_width="match_parent"/>
        </LinearLayout>

        <TextView
            android:id="@+id/medal"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_margin_l"
            android:layout_marginTop="@dimen/default_margin_l"
            android:layout_width="wrap_content"
            tools:ignore="HardcodedText"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>